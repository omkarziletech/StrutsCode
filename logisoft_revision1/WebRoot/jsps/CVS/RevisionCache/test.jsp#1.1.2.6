<%@page contentType="text/html" pageEncoding="UTF-8"%>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
        <c:set var="path" value="${pageContext.request.contextPath}"></c:set>
	<title>Test</title>
	<link type="text/css" href="${path}/css/jquery/jquery.datepick.css" rel="stylesheet">
	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
	<script type="text/javascript" src="${path}/js/jquery/jquery.datepick.js"></script>
	<script type="text/javascript">
	    $(function() {
		$("#fromDate").datepick({
		    showOnFocus: false, 
		    showTrigger: "<img src='${path}/images/icons/calendar-blue.gif' class='trigger' title='From Date'/>",
		    onClose: function() {
			$(this).change();
		    }
		}).change(function(){
		    showDate();
		});
	    });

	    function showDate() {
		alert('The date chosen is ');
	    }
	</script>
    </head>
    <body>
	<input type="text" id="fromDate" value="03/09/2013"/>
    </body>
</html>
