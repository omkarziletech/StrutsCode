import java.sql.Types;

import org.hibernate.dialect.MySQLDialect;
import org.hibernate.type.BigDecimalType;
import org.hibernate.type.StringType;
import org.hibernate.type.TextType;

public class DirtyDialect extends MySQLDialect {
     public DirtyDialect() {
        super();
        registerHibernateType(Types.DECIMAL, BigDecimalType.INSTANCE.getName());   
        registerHibernateType(-1, StringType.INSTANCE.getName());
        registerHibernateType(Types.LONGVARCHAR, TextType.INSTANCE.getName());
     }

}
