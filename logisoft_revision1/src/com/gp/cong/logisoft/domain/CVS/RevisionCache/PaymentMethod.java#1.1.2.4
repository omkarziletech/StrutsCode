package com.gp.cong.logisoft.domain;

import com.gp.cong.common.CommonConstants;
import com.gp.cong.logisoft.struts.form.TradingPartnerForm;
import java.io.Serializable;
import java.sql.Blob;
import org.apache.commons.lang3.StringUtils;

public class PaymentMethod implements Serializable {

    private Integer id;
    private String paymethod;
    private String bankname;
    private String baddr;
    private String vacctname;
    private String vacctno;
    private String aba;
    private String swift;
    private String remail;
    private String rfax;
    private Integer index;
    private String payaccno;//foreign key
    private String payacctno;
    private String defaultpaymethod = CommonConstants.NO;
    private Blob achDocument;
    private String achDocumentName;
    private String achDocumentContentType;

    /**
     *
     */
    public PaymentMethod() {
    }

    public PaymentMethod(TradingPartnerForm tradingPartnerForm) {
        this.paymethod = StringUtils.upperCase(tradingPartnerForm.getPaymethod());
        this.bankname = StringUtils.upperCase(tradingPartnerForm.getBankname());
        this.baddr = StringUtils.upperCase(tradingPartnerForm.getBaddr());
        this.vacctname = StringUtils.upperCase(tradingPartnerForm.getVacctname());
        this.vacctno = StringUtils.upperCase(tradingPartnerForm.getVacctno());
        this.aba = StringUtils.upperCase(tradingPartnerForm.getAba());
        this.swift = StringUtils.upperCase(tradingPartnerForm.getSwift());
        this.remail = tradingPartnerForm.getRemail();
        this.rfax = StringUtils.upperCase(tradingPartnerForm.getRfax());
        this.payaccno = StringUtils.upperCase(tradingPartnerForm.getTradingPartnerId());
        this.payacctno = StringUtils.upperCase(tradingPartnerForm.getTradingPartnerId());
        this.defaultpaymethod = StringUtils.upperCase(tradingPartnerForm.getDefaultPaymentMethod());

    }

    public PaymentMethod(PaymentMethod paymentMethod) {
        this.paymethod = paymentMethod.getPaymethod();
        this.bankname = paymentMethod.getBankname();
        this.baddr = paymentMethod.getBaddr();
        this.vacctname = paymentMethod.getVacctname();
        this.vacctno = paymentMethod.getVacctno();
        this.aba = paymentMethod.getAba();
        this.swift = paymentMethod.getSwift();
        this.remail = paymentMethod.getRemail();
        this.rfax = paymentMethod.getRfax();
        this.payacctno = paymentMethod.getPayacctno();
        this.defaultpaymethod = paymentMethod.getDefaultpaymethod();

    }

    public Integer getId() {
        return id;
    }

    public void setId(Integer id) {
        this.id = id;
    }

    public String getPayaccno() {
        return payaccno;
    }

    public void setPayaccno(String payaccno) {
        this.payaccno = payaccno;
    }

    public Integer getIndex() {
        return index;
    }

    public void setIndex(Integer index) {
        this.index = index;
    }

    public String getAba() {
        return aba;
    }

    public void setAba(String aba) {
        this.aba = aba;
    }

    public String getBaddr() {
        return baddr;
    }

    public void setBaddr(String baddr) {
        this.baddr = baddr;
    }

    public String getBankname() {
        return bankname;
    }

    public void setBankname(String bankname) {
        this.bankname = bankname;
    }

    public String getPaymethod() {
        return paymethod;
    }

    public void setPaymethod(String paymethod) {
        this.paymethod = paymethod;
    }

    public String getRemail() {
        return remail;
    }

    public void setRemail(String remail) {
        this.remail = remail;
    }

    public String getRfax() {
        return rfax;
    }

    public void setRfax(String rfax) {
        this.rfax = rfax;
    }

    public String getSwift() {
        return swift;
    }

    public void setSwift(String swift) {
        this.swift = swift;
    }

    public String getVacctname() {
        return vacctname;
    }

    public void setVacctname(String vacctname) {
        this.vacctname = vacctname;
    }

    public String getVacctno() {
        return vacctno;
    }

    public void setVacctno(String vacctno) {
        this.vacctno = vacctno;
    }

    public String getPayacctno() {
        return payacctno;
    }

    public void setPayacctno(String payacctno) {
        this.payacctno = payacctno;
    }

    public String getDefaultpaymethod() {
        return defaultpaymethod;
    }

    public void setDefaultpaymethod(String defaultpaymethod) {
        this.defaultpaymethod = defaultpaymethod;
    }

    public Blob getAchDocument() {
        return achDocument;
    }

    public void setAchDocument(Blob achDocument) {
        this.achDocument = achDocument;
    }

    public String getAchDocumentName() {
        return achDocumentName;
    }

    public void setAchDocumentName(String achDocumentName) {
        this.achDocumentName = achDocumentName;
    }

    public String getAchDocumentContentType() {
        return achDocumentContentType;
    }

    public void setAchDocumentContentType(String achDocumentContentType) {
        this.achDocumentContentType = achDocumentContentType;
    }
}
